<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="resetPasswordVM" type="com.guruprasadsapplication.app.modules.resetpassword.data.viewmodel.ResetPasswordVM"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearResetPassword"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtLanguage"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_18pxh"
            android:layout_marginStart="@dimen/_18pxh"
            android:layout_marginTop="@dimen/_79pxv"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{resetPasswordVM.resetPasswordModel.txtLanguage}"
            style="@style/txtWorkSansromanmedium25" tools:text="@string/lbl_reset_password"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearPassword"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_49pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/imageVector"
                android:layout_height="@dimen/_20pxh"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="@dimen/_18pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_vector_blue_a400"
                tools:ignore="ContentDescription" tools:src="@drawable/img_vector_blue_a400"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtCreateNewPass"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13pxh"
                android:layout_weight="0.91" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{resetPasswordVM.resetPasswordModel.txtCreateNewPass}"
                style="@style/txtWorkSansromanmedium18" tools:text="@string/msg_create_new_pass"/>
        </LinearLayout>
        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_blue_a400_radius_4"
            android:drawableEnd="@drawable/img_vector_black_900"
            android:drawablePadding="@dimen/_30pxh"
            android:ellipsize="end"
            android:hint="@string/msg_enter_new_passw"
            android:id="@+id/etEmailValue"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_18pxh"
            android:layout_marginStart="@dimen/_18pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_17pxv"
            android:paddingEnd="@dimen/_16pxh"
            android:paddingStart="@dimen/_24pxh"
            android:paddingTop="@dimen/_17pxv" android:singleLine="true"
            android:text="@={resetPasswordVM.resetPasswordModel.etEmailValueValue}"
            android:textColorHint="@color/black_900_7f"
            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearPassword1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_30pxv"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/imageVectorOne"
                android:layout_height="@dimen/_20pxh"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="@dimen/_18pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_vector_blue_a400"
                tools:ignore="ContentDescription" tools:src="@drawable/img_vector_blue_a400"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtConfirmPasswor"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13pxh"
                android:layout_weight="0.9" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{resetPasswordVM.resetPasswordModel.txtConfirmPasswor}"
                style="@style/txtWorkSansromanmedium18" tools:text="@string/msg_confirm_passwor"/>
        </LinearLayout>
        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_blue_a400_radius_4"
            android:drawableEnd="@drawable/img_vector_black_900"
            android:drawablePadding="@dimen/_30pxh"
            android:ellipsize="end"
            android:hint="@string/msg_enter_password"
            android:id="@+id/etPasswordValue"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_18pxh"
            android:layout_marginStart="@dimen/_18pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_17pxv"
            android:paddingEnd="@dimen/_18pxh"
            android:paddingStart="@dimen/_22pxh"
            android:paddingTop="@dimen/_17pxv" android:singleLine="true"
            android:text="@={resetPasswordVM.resetPasswordModel.etPasswordValueValue}"
            android:textColorHint="@color/black_900_7f"
            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/btnSubmit"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_18pxh"
            android:layout_marginStart="@dimen/_18pxh"
            android:layout_marginTop="@dimen/_309pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_15pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_15pxv" android:singleLine="true"
            android:text="@string/lbl_submit"
            android:textAllCaps="false" style="@style/btnSolidRounded_3" tools:text="@string/lbl_submit"/>
    </LinearLayout>
</layout>
